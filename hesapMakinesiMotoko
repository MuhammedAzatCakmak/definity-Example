// hesap makinesi
// degiskenler (let -> immutable, var -> mutable)
// operat√∂rler
// async metodu 
// if condition

actor hesapMakinesi {
  var hucre: Int = 0;

  // toplama fonksiyonu
  public func toplama(s : Int) : async Int {
    hucre += s;
    hucre
    // (Debug.print(debug_show (hucre));)
  };

  // cikarma fonksiyonu
  public func cikarma(s : Int) : async Int {
    hucre -= s;
    hucre
  };

  // carpma fonksiyonu
  public func carpma(s : Int) : async Int {
    hucre *= s;
    hucre
  };

  // bolme fonksiyonu
  public func bolme(s : Int) : async ?Int {
    if(s == 0){
      null
    }else{
      hucre /= s;
      ?hucre
    };
  };

  // temizle
  public func temizle() : async (){
    hucre := 0;
  };
};
